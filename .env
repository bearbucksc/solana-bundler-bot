# Network Configuration
SOLANA_NETWORK=mainnet
RPC_URL=https://api.mainnet-beta.solana.com

# Jito Configuration
JITO_RELAY_ENDPOINT=https://relay.jito.lol

# Wallet Configuration
ENCRYPTION_KEY=your-encryption-key-here  # Will be generated
MIN_WALLET_AGE=24  # Minimum age in hours before wallet can be used
MAX_WALLET_AGE=168  # Maximum age in hours before wallet is retired

# Alert Configuration
X_SIGN_API_KEY=your-x-sign-api-key  # Optional
X_SIGN_CHANNEL_ID=your-channel-id  # Optional

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here  # Will be generated

# WebSocket Configuration
WS_PORT=8765

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bundler_bot.log

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# MEV Protection
MIN_PRIORITY_FEE=1000000000  # 1 lamport
MAX_SLIPPAGE=0.5  # 0.5%
